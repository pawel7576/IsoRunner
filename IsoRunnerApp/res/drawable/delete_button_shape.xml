<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D85230" />
            <gradient android:angle="-90" android:startColor="#C13714" android:endColor="#DA7860"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D85230" />
            <solid android:color="#DA7860"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D85230" />
            <gradient android:angle="-90" android:startColor="#F29D88" android:endColor="#DA7860" />
        </shape>
    </item>
</selector>